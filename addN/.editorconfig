# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = crlf
insert_final_newline = true

# Set default charset and indentation style
[*.{js,jsx,ts,tsx,json,html,dust,styl,yml,md,scss,aspx,ascx,cshtml}]
charset = utf-8
indent_style = space
indent_size = 2
